#include<stdio.h>

#define max 31

void prarr(int m[][max],int n)
{
	for(int i=0;i<n;i++)
	{
		for(int j=0;j<n;j++)
		{
			printf("%3d ",m[i][j]);
			
		}
		printf("\n");
		
	}
}

void magic_diag(int m[][max],int n)
{
	int row=n-1;
	int col=n/2;
	
	m[row][col]=1;
	for(int i=2;i<=n*n;i++)
	{
		if(i%n==1)
		{
			row=(row-1+n)%n;
		}
		else
		{
			row=(row+1+n)%n;
			col=(col+1+n)%n;
		}
		m[row][col]=i;

	}
	
}

int main()
{
	int m[max][max]={0};
	int n;
	
	printf("Enter n: ");
	scanf("%d",&n);
	
	
	printf("Diagonal Move\n");
	magic_diag(m,n);
	prarr(m,n);
		
}
